{
   "compilerOptions": {
      "lib": [
         "ESNext"
      ],
      "module": "ESNext",
      "moduleResolution": "node",
      "target": "ESNext",
      "outDir": "dist",
      "sourceMap": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      "resolveJsonModule": true,
      "types": ["bun-types"]
   },
   "include": [
      "src/",
   ],
   "exclude": [
      "node_modules"
   ]
}